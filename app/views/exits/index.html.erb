<div class="text-center">
<h1>出入口</h1>

<%= render :partial => "common/errorIfNotFound", 
  :locals => { :list => @exits, :name => '入谷駅' } %>

<table class="table table-striped span5 center-table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exits.each do |exit| %>
      <tr>
        <td><%= link_to exit.name, line_station_exit_path(@line.line_id, exit.station_id,exit.id), 'data-no-turbolink' => true %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
